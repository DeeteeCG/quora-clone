<% all_questions = Question.all.reverse %>
<% all_questions.each do |x| %>
  <p>-----------------------------------------------------------------------------------------------</p>
  <h4><%= x.question_content %></h4>
  <%= erb :"/static/answers_form", :locals => {:x => x}%>
  <% all_answers = x.answers.reverse %>
  <% all_answers.each do |t| %>
    <p><%=t.answer_content %></p>
  <% end %>
<% end %>
